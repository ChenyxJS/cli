{ 
  "include": ["lib/**/*"], // 指定被编译文件所在的目录
  "compilerOptions": {
    "target": "ES2016", 
    "lib": ["DOM"],
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true, 
    "resolveJsonModule":true,    
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
} 
